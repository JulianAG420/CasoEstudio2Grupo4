@model IEnumerable<CasoEstudio2G4.Models.CasaModel>

<h2>Alquilar Casa</h2>

<form method="post">
    <div class="form-group">
        <label for="IdCasa">Casa</label>
        <select id="IdCasa" name="idCasa" class="form-control">
            @foreach (var casa in Model)
            {
                <option value="@casa.IdCasa">@casa.DescripcionCasa - $@casa.PrecioCasa</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="UsuarioAlquiler">Usuario</label>
        <input type="text" id="UsuarioAlquiler" name="usuarioAlquiler" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Alquilar</button>
</form>